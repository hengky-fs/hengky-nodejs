    "aws-sdk": "^2.1046.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.10.7",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.3",
    "express": "4.17.1",
