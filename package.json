    "nock": "^13.2.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.2.1",
    "prettier-eslint-cli": "5.0.0",
    "redis-mock": "^0.56.3",
    "sequelize-auto": "^0.4.29",
    "sequelize-cli": "^6.4.1"
  },
  "jest": {
    "reporters": [
      "default"
    ],
    "collectCoverage": true,
    "bail": false,
