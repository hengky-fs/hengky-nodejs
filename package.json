  "main": "src/app.js",
  "scripts": {
    "start": "nodemon ./src/app",
    "dev": "nodemon -w src --exec \"node ./src/app.js\"",
    "debug": "nodemon -w src --exec \"node --expose-gc --inspect=9340 ./src/app.js\"",
    "db:start": "./scripts/db_start.js",
    "db:stop": "./scripts/db_stop.js",
    "db:reset": "./scripts/db_reset.js",
    "db:dump": "./scripts/db_dump.js",
    "serve": "node ./src/app",
    "validate": "npm ls",
    "lint": "prettier-eslint --write 'src/**/*.js'",
    "bootstrap": "nodemon -w src --exec \"node ./src/bootstrap/index.js\"",
    "test": "jest --runInBand --testTimeout=10000",
    "test:unit": "yarn test --testPathIgnorePatterns=.integration.spec.js"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
