    "mysql": "^2.18.1",
    "mysql2": "^2.1.0",
    "node-cron": "^3.0.0",
    "node-fetch": "^2.6.0",
    "sequelize": "^6.3.4",
    "uuid": "^8.3.0",
    "winston": "^3.2.1",
    "winston-cloudwatch": "^2.3.2",
    "winston-daily-rotate-file": "^4.4.2"
